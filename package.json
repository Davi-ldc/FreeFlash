{
	"name": "free-flash",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.2.22",
	"workspaces": [
		"app",
		"cms"
	],
	"scripts": {
		"a": "bun run --cwd ./app analyze",
		"build": "turbo run build --filter=app",
		"deploy": "bunx wrangler deploy",
		"dev": "concurrently --names \"CMS,APP\" -c \"bgBlue.bold,bgGreen.bold\" \"bun run dev:cms\" \"bun run dev:app\"",
		"dev:app": "bun run --cwd ./app dev",
		"dev:cms": "bun run --cwd ./cms dev",
		"login": "bunx wrangler login",
		"preview": "bunx wrangler dev",
		"format": "biome format --write --verbose .",
		"lint": "biome lint --verbose . && stylelint \"**/*.scss\" --formatter verbose",
		"lint:fix": "biome check --write --verbose . && stylelint \"**/*.scss\" --fix --formatter verbose"
	},
	"dependencies": {
		"@kitajs/ts-html-plugin": "^4.1.3",
		"@sanity/client": "^7.11.2",
		"@types/bun": "^1.2.22",
		"sanity": "^4.10.1",
		"wrangler": "^4.40.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"bun": "^1.2.22",
		"concurrently": "^9.2.1",
		"stylelint": "^16.24.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-order": "^7.0.0",
		"stylelint-scss": "^6.12.1",
		"turbo": "^2.5.6"
	}
}

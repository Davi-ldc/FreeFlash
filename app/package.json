{
  "name": "app",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "analyze": "tsup server/index.ts --metafile && tsx server/utils/analyze.ts && start EsbuildAnalyzer.html && shx rm -rf EsbuildAnalyzer.html",
    "fetch:sanity": "tsx fetch-sanity.ts",
    "precompileTemplates": "tsx precompile-templates.ts",
    "dev:vite": "vite",
    "dev:server": "pnpm precompileTemplates && tsx ./server/dev.ts",
    "dev:watch:fetch-sanity": "nodemon --on-change-only --watch fetch-sanity.ts --exec \"pnpm fetch:sanity\"",
    "dev:watch:server": "nodemon --watch src/**/* --ext hbs --watch server/**/* --watch precompile-templates.ts --exec \"pnpm dev:server\"",
    "dev": "pnpm fetch:sanity && concurrently --kill-others -n FETCH,VITE,SERVE -c cyan,yellow,black \"pnpm:dev:watch:fetch-sanity\" \"pnpm:dev:vite\" \"pnpm:dev:watch:server\"",
    "build:vite": "vite build",
    "build": "tsup server/index.ts && shx cp server/config/.vc-config.json .vercel/output/functions/index.func/ && shx cp server/config/vercel.config.json .vercel/output/config.json"
  },
  "devDependencies": {
    "@hono/node-server": "^1.15.0",
    "@types/locomotive-scroll": "^4.1.4",
    "@types/node": "^24.0.13",
    "dotenv": "^16.5.0",
    "esbuild-analyzer": "^0.2.0",
    "nodemon": "^3.1.10",
    "sass-embedded": "^1.89.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@sanity/client": "^6.22.2",
    "@sanity/image-url": "^1.1.0",
    "gsap": "^3.13.0",
    "handlebars": "^4.7.8",
    "hono": "^4.8.5",
    "locomotive-scroll": "^4.1.4",
    "ogl": "^1.0.11",
    "replace-in-file": "^8.3.0",
    "shx": "^0.4.0",
    "tsup": "^8.5.0"
  }
}

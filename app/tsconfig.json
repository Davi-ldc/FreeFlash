{
  "compilerOptions": {
    "target": "ESNext", //mais recente
    "module": "ESNext", //mais recente
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": ["vite/client", "hono/jsx"],
    "esModuleInterop": true, //pra importar libs antigas
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "*.ts", "server/**/*", "api/**/*", "eslint.config.js"]
}
